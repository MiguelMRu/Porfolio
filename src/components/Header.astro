---
const {id} = Astro.props;
---
<header id={id}>

    <img src="/images/foto_perfil.webp" alt="Foto de Miguel Mateos dueño del porfolio" loading="lazy">
    <h1>miguel mateos</h1>
    <hgroup>
        <p>HOLA, SOY</p>
        <h2>Front-End <br> Developer</h2>
        <p class="location">RESIDO EN LORCA, REGIÓN DE MURCIA</p>
    </hgroup>

    
    

</header>

<style>
    header {
        display: flex;
        width: 100%;
        height: 100dvh;
        position: relative;
        gap: 2rem   ;

         @media (width <= 1024px) {
            flex-direction: column;
            height: fit-content;
        }
    }


    header h1 {
        font-size: var(--header-size);
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-weight: normal;
        width: 100%;
        text-align: center;
        font-style: italic;
        animation: .7s ease-in-out both .2s appear;

        @media (width <= 750px) {
            position: unset;
            transform: none;
  
        }
    }




    header img {
        height: 100%;
        /*animation: .7s ease-out both .2s slide-right;*/
        @media (width <= 750px) {
            height: auto;
            margin: 0 auto;
        }

       
    }

    header hgroup{
        display: flex;
        flex-direction: column;
        justify-content: end;
        width: auto;
        margin-bottom: 2rem;

        & p{
            font-size: clamp(1rem,1vw + 0.5rem,2rem);
            line-height: 1;
            animation: .7s ease-in-out both .2s appear;

        }

        & h2{
            color: var(--text-color);
            font-style: italic;
            font-weight: normal;
            line-height: 1;
            font-size: clamp(3rem,1vw + 0.5rem,5rem);
            animation: .7s ease-in-out both .2s appear;

        }

        & .location{
            margin-top: 20px;
        }

    }

    @keyframes slide-right {
        from {
            transform: translateX(-100%);
        }

        to{
            transform: translateX(0);
        }
        
    }

</style>