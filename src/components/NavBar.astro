<style>
    nav {
        position: fixed;  
        color: #fff;
        z-index: 1000;
        display: flex;
        width: 100%;
        top: 30px;
        flex-wrap: wrap;
        align-items: center;
        justify-content: space-between;
        animation: navScroll linear forwards;
        animation-timeline: scroll(root block);
        animation-range: 0px 100px; /* Opcional: controla el rango de scroll */
        & h2 {
        font-size: clamp(.5rem, 2vw + 1rem, 2rem);
        margin-left: 4rem;
        animation: .7s ease-in-out both appear;
        @media (width <= 1500px){display: none;} 
        }

        @media (width <= 750px) {
            display: none;
        }

    }

    nav a {
        text-decoration: none;

    }


    nav ul {
        list-style: none;
        display: flex;
        gap: 6rem;
        align-items: center;
        margin-right: 8rem;
        height: 100%;
        flex-wrap: nowrap;

        @media (width <= 1050px){
            gap: 2rem;
            margin-right: 0;
            width: 100%;
            height: 30px;
        }



        & li {
            transition: all 0.2s ease-in-out;

            &:nth-child(1){
                animation: .7s ease-in-out slide-down;
            }
            &:nth-child(2){
                animation: .7s ease-in-out .2s slide-down;
            }

            &:nth-child(3){
                animation: .7s ease-in-out .3s slide-down;
            }

            &:nth-child(4){
                animation: .7s ease-in-out .4s slide-down;
            }

            &:nth-child(5){
                animation: .7s ease-in-out .5s slide-down;
            }

            & a {
                text-decoration: none;
                color: var(--main-color);
                text-transform: uppercase;
                font-size: clamp(1rem, 1.5vw + 0.75rem, 1.5rem);
                display: flex;
                align-items: center;
                margin-bottom: -12px;
                
            }

        }
        & li:hover ,& li:focus, & li:active {
            transform: scale(.9);
            
        }
    }



    @keyframes navScroll {

        100% {
            top: 0;
            background: rgba(255, 255, 255);
        }
    }

    @keyframes slide-down {
        from {
            transform: translateY(-100px);
        }

        to{
            transform: translateY(0);
        }
        
    }

    


</style>