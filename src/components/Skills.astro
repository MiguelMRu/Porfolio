---
import HTML_icon from "../components/icons/Html_icon.astro";
import CSS_icon from "../components/icons/Css_icon.astro";
import JS_icon from "../components/icons/Js_icon.astro";
import React_icon from "../components/icons/React_icon.astro";
import Astro_icon from "../components/icons/Astro.astro";

const {id} = Astro.props;

---


<section id={id} class="skills">
    <h2>habilidades</h2>
    <div class="skills-content">
        <article class="skill-article front">
            <h3>Frontend</h3>
            <ul>
                <li>
                    <HTML_icon /> 
                    <div class="skill-text">
                        <p>HTML</p>
                        <p>AVANZADO</p>
                    </div>
                </li>
                <li>
                    <CSS_icon />
                    <div class="skill-text">
                        <p>CSS</p>
                        <p>AVANZADO</p>
                    </div>
                </li>
                <li>
                    <JS_icon />
                    <div class="skill-text">
                        <p>JAVASCRIPT</p>
                        <p>INTERMEDIO</p>
                    </div>
                </li>
                <li>
                    <React_icon />
                    <div class="skill-text">
                        <p>REACT</p>
                        <p>INTERMEDIO</p>
                    </div>
                </li>
                <li><Astro_icon />
                    <div class="skill-text">
                        <p>ASTRO</p>
                        <p>BASICO</p>
                    </div>
                </li>
                <!--<li><Tailwind_icon /></li>-- -->
                <li>Git y GitHub</li>
            </ul>
        </article>
        <article class="skill-article back">
            <h3>Backend</h3>
            <ul>
                <li>SQL</li>
                <li>Express</li>
                <li>MongoDB</li>
                <li>PostgreSQL</li>
                <li>API REST</li>
            </ul>
        </article>
        <article class="skill-article soft">
            <h3>Soft-Skills</h3>
            <ul>
                <li>Trabajo en equipo</li>
                <li>Comunicación</li>
                <li>Resolución de problemas</li>
                <li>Adaptabilidad</li>
                <li>Jira</li>
                <li>Metodologías ágiles (Scrum, Kanban)</li>
            </ul>
        </article>
    </div>
    
</section>

<style>



    .skills-content {
        display: grid;
        gap: 5rem;
        grid-template-areas: 
        "front back"
        "soft soft" ;
    }

    .skill-article {
        padding: 1rem;
        border-radius: 8px;

        & h3 {
            font-size: 1.5rem;
            margin-bottom: 1rem;
            color: var(--text-color);
        }

        & ul{
            list-style-type: none;
            text-align: left;
            display: grid;
            width: 100%;
            grid-template-columns: repeat(auto-fill, 50px);
            gap: 5rem;
            justify-content: space-between;

            & li{
                display: flex;
                flex-direction: column;
                width: 100px;
                align-items: center;
                font-size: .8rem;
                gap: 1rem;
                box-shadow: 3px 5px 5px var(--text-color);
                padding: 1rem 2rem;
                border-radius: 8px;
                border: 1px solid black;

                & .skill-text{
                    text-align: center;
                    display: flex;
                    gap: .2rem;
                    flex-direction: column;
                }

            }
        }
    }

    .front{
        grid-area: front;
    }
    .back{
        grid-area: back;
    }

    .soft{
        grid-area: soft;
        
        & h3{
            text-align: center
        }
        & ul{
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 5rem;

            
        }
    }



</style>