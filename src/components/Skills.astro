<style>
    /*
    .skills{
        height: fit-content;
    }

*/
    .skills {
        grid-area: skills;
        width: 100%;
        height: 100%;
        padding: 0;
    }
    .skills-content {
        display: flex;
        gap: 2rem;
        justify-content: flex-end;
        width: 100%;
        align-self: flex-end;
        justify-self: flex-end;
        height: 100%;

        @media (width <= 750px) {
            height: fit-content;
            justify-self: center;
            align-self: center;
            width: 100%;

        }      
    }

    .skill-article {
        padding: 1rem;
        border-radius: 8px;
        align-items: flex-end;
        display: flex;
        flex-direction: column;
        width: 100%;
        gap: 1rem;
        justify-content: flex-end;
        

        & h3 {
            font-size: 2rem;
            margin-bottom: 1rem;
            color: var(--text-color);
        }

        & ul{
            list-style-type: none;
            display: grid;
            grid-template-rows: repeat(2, 1fr);
            grid-template-columns: repeat(5, 70px);
            width: 100%;
            gap: 2rem;
           /* justify-content: flex-end;*/
            width: 100%;
            flex-wrap: wrap;


            @media (width <= 750px) {
                 grid-template-columns: repeat(auto-fit, minmax(50px, 1fr));

        }     
            

            & li{
                width: 40px;
                color: var(--text-color);
                transition: all .2s ease-in-out;

                &:hover{
                    transform: scale(1.5);
                    
                }



                & .skill-text{
                    text-align: center;
                    display: flex;
                    gap: .2rem;
                    flex-direction: column;
                }

            }
        }
    }

    .front{
        grid-area: front;
    }
    .back{
        grid-area: back;
    }

    .soft{
        grid-area: soft;

        & li{
            text-align: right;
            flex: 1;
            font-size: 1rem;
        }
        
    }



</style>