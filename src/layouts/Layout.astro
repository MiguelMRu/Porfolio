---
const {title, description} = Astro.props;
import Analytics from '@vercel/analytics/astro'
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0,  shrink-to-fit=no" />
		<link rel="icon" type="image/x-icon" href="/images/foto_perfil.webp" />
		<meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta name="author" content="Miguel Mateos" />
    <meta name="keywords" content="portfolio, Miguel Mateos, desarrollador, IT, Frontend, JavaScript, React, Astro, CSS" />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#121212" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://porfolio-jet-kappa.vercel.app/" />
    <meta property="og:image" content="https://miguelmateos.dev/og-image.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
    <Analytics />
	</body>
</html>

<style is:global>

  :root {
    --main-color: #bf2222;
    --font-family: 'Baskervville', 'playfair', system-ui, 'Segoe UI';
    --text-color: #1a1a1a;
    --text-font: monserrat, system-ui, 'Segoe UI';
    --header-size: clamp(1rem, 8vw + 2rem, 11rem);
    --h3-font-size: clamp(2rem, 3vw, 4rem);
    --text-size: clamp(1rem,1vw + 0.5rem,2rem);
  }



@font-face {
  font-family: 'playfair';
  src: url('/fonts/PlayfairDisplay-VariableFont_wght.ttf') format('truetype');
}

@font-face {
  font-family: 'Baskervville';
  src: url('/fonts/Baskervville-Italic-VariableFont_wght.ttf') format('truetype');
}

/* 1. Use a more-intuitive box-sizing model */
*, *::before, *::after {
  box-sizing: border-box;
  scroll-behavior: smooth;
}

/* 2. Remove default margin */
* {
  margin: 0;
}

/* 3. Enable keyword animations */
@media (prefers-reduced-motion: no-preference) {
  html {
    interpolate-size: allow-keywords;
  }
}

html {
  width: 100%;
}

body {

  /* 5. Improve text rendering */
  -webkit-font-smoothing: antialiased;
  width: 100%;
  max-width: 100vw;
  overflow-x: hidden; /* por si aparece scroll lateral */
  min-height: 100dvh;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  scroll-behavior: smooth;

  


}

/* 6. Improve media defaults */
img, picture, video, canvas, svg {
  display: block;
  max-width: 100%;
}

/* 7. Inherit fonts for form controls */
input, button, textarea, select {
  font: inherit;
}

/* 8. Avoid text overflows */
p, h1, h2, h3, h4, h5, h6 {
  overflow-wrap: break-word;
  
}

/* 9. Improve line wrapping */
p {
  text-wrap: pretty;
  color: var(--text-color);
  
}
h1, h2, h3, h4, h5, h6 {
  text-wrap: balance;
  color: var(--main-color);
  font-family: var(--font-family);
  font-weight: 300;
  font-style: italic;
  
}

strong {
  color: var(--main-color);
  font-weight: bold;
}

p, a, li, span, input, button, textarea {
  font-family: var(--text-font);
}

    main {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
        height: fit-content;

    }

    section {
        display: flex;
        flex-direction: column;
        width: 100%;
        height: 100dvh;
        padding: 2rem 5rem;
        gap: 2rem;

        @media (width <=750px){
          padding: 0.5rem 2rem;
          height: auto;
        }
        
        @media (min-width: 751px) and (max-width: 1400px) {
          padding: 0.5rem 2rem;
          height: fit-content;
      } 

        & h2 {
            font-size: var(--header-size);
            margin-bottom: 1rem;
            /*text-shadow: 2px 4px 5px var(--text-color);*/
        }

    }

    @keyframes appear {
        from {
            opacity: 0;
            
        }
        to{
            opacity: 1;

        }
        
    }


</style>
